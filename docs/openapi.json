                    }
                ],
                "tags": [
                    "user"
                ],
                "summary": "Update user name",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateNameRequest"
                            }
                        }
                    },
