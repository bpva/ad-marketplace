    "servers": [
        {
            "url": "/api/v1"
        }
    ],
    "components": {
        "securitySchemes": {
            "BearerAuth": {
                "type": "apiKey",
                "name": "Authorization",
                "in": "header"
            }
        },
        "schemas": {
            "AddManagerRequest": {
                "type": "object",
                "properties": {
                    "telegram_id": {
                        "type": "integer"
                    }
                }
            },
            "AuthRequest": {
                "type": "object",
                "properties": {
                    "init_data": {
                        "type": "string"
                    }
                }
            },
            "AuthResponse": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "user": {
                        "$ref": "#/components/schemas/UserResponse"
                    }
                }
            },
            "ChannelAdmin": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "telegram_id": {
                        "type": "integer"
                    },
                    "username": {
                        "type": "string"
                    }
                }
            },
            "ChannelResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "title": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    }
                }
            },
            "ChannelRoleType": {
                "type": "string",
                "enum": [
                    "undefined",
                    "owner",
                    "manager"
                ],
                "x-enum-varnames": [
                    "ChannelRoleTypeUndefined",
                    "ChannelRoleTypeOwner",
                    "ChannelRoleTypeManager"
                ]
            },
            "ChannelWithRoleResponse": {
                "type": "object",
                "properties": {
                    "channel": {
                        "$ref": "#/components/schemas/ChannelResponse"
                    },
                    "role": {
                        "$ref": "#/components/schemas/ChannelRoleType"
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "details": {
                        "type": "object",
                        "additionalProperties": {}
                    },
                    "error_code": {
                        "type": "string"
                    }
                }
            },
            "Language": {
                "type": "string",
                "enum": [
                    "en",
                    "ru"
                ],
                "x-enum-varnames": [
                    "LanguageEN",
                    "LanguageRU"
                ]
            },
            "ManagerResponse": {
                "type": "object",
                "properties": {
                    "created_at": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "role": {
                        "$ref": "#/components/schemas/ChannelRoleType"
                    },
                    "telegram_id": {
                        "type": "integer"
                    }
                }
            },
            "PreferredMode": {
                "type": "string",
                "enum": [
                    "publisher",
                    "advertiser"
                ],
                "x-enum-varnames": [
                    "PreferredModePublisher",
                    "PreferredModeAdvertiser"
                ]
            },
            "ProfileResponse": {
                "type": "object",
                "properties": {
                    "language": {
                        "$ref": "#/components/schemas/Language"
                    },
                    "name": {
                        "type": "string"
                    },
                    "onboarding_finished": {
                        "type": "boolean"
                    },
                    "preferred_mode": {
                        "$ref": "#/components/schemas/PreferredMode"
                    },
                    "receive_notifications": {
                        "type": "boolean"
                    },
                    "telegram_id": {
                        "type": "integer"
                    },
                    "theme": {
                        "$ref": "#/components/schemas/Theme"
                    }
                }
            },
            "Theme": {
                "type": "string",
                "enum": [
                    "light",
                    "dark",
                    "auto"
                ],
                "x-enum-varnames": [
                    "ThemeLight",
                    "ThemeDark",
                    "ThemeAuto"
                ]
            },
            "UpdateNameRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "UpdateSettingsRequest": {
                "type": "object",
                "properties": {
                    "language": {
                        "$ref": "#/components/schemas/Language"
                    },
                    "onboarding_finished": {
                        "type": "boolean"
                    },
                    "preferred_mode": {
                        "$ref": "#/components/schemas/PreferredMode"
                    },
                    "receive_notifications": {
                        "type": "boolean"
                    },
                    "theme": {
                        "$ref": "#/components/schemas/Theme"
                    }
                }
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "telegram_id": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}