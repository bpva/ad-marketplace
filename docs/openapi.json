            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "tags": [
                    "channels"
                ],
                "summary": "Add channel manager",
                "parameters": [
                    {
                        "description": "Telegram channel ID",
                        "name": "TgChannelID",
